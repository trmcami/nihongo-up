<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <div id="clearance" class="password-reset">
      <h2><%= t(".title") %></h2>

      <p><%= t(".description") %></p>

      <%= form_for :password, url: passwords_path do |form| %>
        <div class="form-group">
          <%= form.text_field :email, type: 'email', class: 'form-control', placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= form.submit class: 'btn btn-lg btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
